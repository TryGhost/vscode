{
	"name": "ghost",
	"displayName": "Ghost: Theme Tools",
	"description": "The ultimate Ghost theme development tool for the world's most popular open-source publishing platform",
	"publisher": "TryGhost",
	"icon": "images/ghost.png",
	"galleryBanner": {
		"color": "#15171A",
		"theme": "dark"
	},
	"version": "1.1.1",
	"keywords": [
		"Ghost",
		"Theme"
	],
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:ghost.search",
		"onLanguage:handlebars",
		"onCommand:ghost.gscan"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ghost.search",
				"title": "Search documentation",
				"category": "Ghost"
			},
			{
				"command": "ghost.gscan",
				"title": "Scan your theme for errors with Gscan",
				"category": "Ghost"
			},
			{
				"command": "ghost.deploy",
				"title": "Add GitHub Actions code for automatic theme deploys",
				"category": "Ghost"
			}
		]
	},
	"repository": {
		"url": "https://github.com/TryGhost/vscode-ghost-theme-development-helper"
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "8.0.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.11.59",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "5.38.0",
		"@typescript-eslint/parser": "5.38.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "10.0.0",
		"typescript": "4.8.3"
	},
	"license": "MIT"
}