{
	"name": "ghost-theme-development-helper",
	"displayName": "Ghost Theme Development Helper",
	"description": "Helps you develop Ghost themes quickly",
	"publisher": "Ghost",
	"icon": "images/ghost.png",
	"galleryBanner": {
		"color": "#15171A",
		"theme": "dark"
	},
	"version": "1.0.0",
	"keywords": ["Ghost","Theme"],
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages", "Snippets", "Other"
	],
	"activationEvents": [
		"onCommand:ghost-helper.search",
		"onLanguage:handlebars",
		"onCommand:ghost-helper.gscan"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ghost-theme-development-helper.search",
				"title": "Search Ghost's documentation"
			},
			{
				"command": "ghost-theme-development-helper.gscan",
				"title": "GScan your Ghost theme for errors",
				"icon": "${bug}"
			}
		]
	},
	"repository": {
		"url": "https://github.com/TryGhost/vscode-ghost-theme-development-helper"
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4"
	},
	"license": "MIT"
}